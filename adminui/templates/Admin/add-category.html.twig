{% extends 'modal-layout.html.twig' %}

{% block title %}添加分类{% endblock %}
{% block main %}

<form id="add-category-form" class="form-horizontal" action="{{ path('add_category') }}" method="post">

  <div class="form-group">
    <label class="col-sm-3 control-label" for="field-name">分类</label>
    <div class="col-sm-6 controls">
      <input id="field-name" class="form-control" type="text" name="name" value="">
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn btn-link" data-dismiss="modal">取消</button>
    <button class="btn btn-primary" type="submit">保存</button>
  </div>
</form>

<script> app.load('admin/add-category.js'); </script>

{% endblock %}