
{% extends 'layout.html.twig' %}

{% block main %}
    <section class="content-header">

    </section>
<section class="content">
    <div class="box">
      <div class="box-body">
<table class="table"  id="proxy-list">
 <thead>
                    <tr>
                        <th>用户</th>
                        <th>标题</th>
                        <th>点击量</th>
                        <th>分类</th>
                        <th>标签</th>
                        <th>添加时间</th>
                      </tr>
</thead>
  
<tbody>

                    {% for link in links %}
                    {%set sort=category[link['categoryId']]|default(null)%}
                        <tr>
                            <td>{{ link.user['username'] }}</td>
                            <td><a target="_blank" href="{{path('url_link',{id:link.id})}}"  title="{{link.title}}">{{ link.sub_title }}</a></td> 
                            <td>{{ link.hits }}</td>
                            <td>{{sort.name|default('未知')}}</td>
                            <td>{{ link.tags }}</td>
                            <td>{{ link.createdTime|date('Y-m-d H:i:s') }}</td>

                        </tr>
                    {% endfor %}
</tbody>
</table>
      {{ web_macro.paginator(paginator) }} 
    </div>
    </div>
      
  </section>

{% endblock %}